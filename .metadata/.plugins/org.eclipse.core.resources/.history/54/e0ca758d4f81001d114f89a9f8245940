package maccess;
  public class Loops {
	public static void main(String args[]) {
     int n = 4;
     //Outer for loop
     for(int i=1; i<=n-1; i++) {
    	 // Inner for loop
    	 for(int j=1; j<=n-1; j++ ) {
    			 System.out.print(" "); 
    	 }
    	 
    	 for(int j=1; j<=i; j++) {
    		 System.out.print("*");
    	 }
    	    System.out.println();
     }
	
	}
}
